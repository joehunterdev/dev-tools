# Root .htaccess - Security + Index Serving + File Browsing
# Generated by xampp-tools

# ============================================================
# CORE CONFIGURATION
# ============================================================

# Allow .htaccess overrides
AllowOverride All

# Allow directory access and indexing
Options +FollowSymLinks +Indexes

# Grant all access
Require all granted

# Set index.php as default directory file
DirectoryIndex index.php index.html index.htm

# ============================================================
# SECURITY - BLOCK SENSITIVE FILES
# ============================================================

# Deny access to sensitive files and extensions
<FilesMatch "\.(env|gitignore|lock|md|yml|yaml|sql|bak|tmp|log)$">
    Require all denied
</FilesMatch>

# Deny access to config files
<FilesMatch "^(config|\.git|\.env)" >
    Require all denied
</FilesMatch>

# Prevent direct access to composer files
<FilesMatch "^(composer\.json|composer\.lock|package\.json|package-lock\.json)$">
    Require all denied
</FilesMatch>

# ============================================================
# PREVENT DIRECTORY TRAVERSAL
# ============================================================

# Disable script execution in upload directories
<Directory "*/uploads">
    php_flag engine off
    AddType text/plain .php .phtml .php3 .php4 .php5 .php6 .phps .pht .phar .phtml .shtml .jsp .asp .aspx .cgi .pl .sh
</Directory>

# ============================================================
# PERFORMANCE - CACHING
# ============================================================

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    
    # Fonts
    ExpiresByType font/ttf "access plus 1 month"
    ExpiresByType font/otf "access plus 1 month"
    ExpiresByType font/woff "access plus 1 month"
    ExpiresByType font/woff2 "access plus 1 month"
    
    # HTML (short cache)
    ExpiresByType text/html "access plus 1 hour"
    
    # Default
    ExpiresDefault "access plus 2 weeks"
</IfModule>

# ============================================================
# COMPRESSION
# ============================================================

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css text/javascript application/javascript application/json text/xml application/xml application/xml+rss
</IfModule>

# ============================================================
# ETAG
# ============================================================

<IfModule mod_headers.c>
    Header unset ETag
    FileETag None
</IfModule>
