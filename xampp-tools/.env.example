# ============================================================
# XAMPP Tools Configuration
# ============================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ------------------------------------------------------------
# XAMPP Paths
# ------------------------------------------------------------
XAMPP_ROOT_DIR= 
XAMPP_DOCUMENT_ROOT= 

# ------------------------------------------------------------
# Server Settings
# ------------------------------------------------------------
XAMPP_SERVER_NAME= 
XAMPP_SERVER_IP= 
XAMPP_SERVER_PORT= 
XAMPP_SSL_PORT= 

# ------------------------------------------------------------
# MySQL
# ------------------------------------------------------------
MYSQL_HOST= 
MYSQL_PORT= 
MYSQL_USER= 
MYSQL_ROOT_PASSWORD=

# ------------------------------------------------------------
# phpMyAdmin
# ------------------------------------------------------------
PMA_AUTH_TYPE=cookie
PMA_ALLOW_NO_PASSWORD=false
PMA_BLOWFISH_SECRET=
PMA_USER=pma
PMA_PASSWORD=
PMA_MEMORY_LIMIT=512M
PMA_EXEC_TIME_LIMIT=600

# ------------------------------------------------------------
# PHP Settings
# ------------------------------------------------------------
PHP_POST_MAX_SIZE=600M
PHP_UPLOAD_MAX_FILESIZE=600M
PHP_CURL_CAINFO= 
PHP_OPENSSL_CAFILE= 

# ------------------------------------------------------------
# VHosts
# ------------------------------------------------------------
VHOSTS_EXTENSION=.local
IS_IPV6=false

# ------------------------------------------------------------
# WordPress Database & Admin
# ------------------------------------------------------------

WP_DB_NAME=
WP_DB_USER=
WP_DB_PASSWORD=
WP_ADMIN_USER=
WP_ADMIN_PASSWORD=
WP_ADMIN_EMAIL=
